<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:columnCount="1"
    android:rowCount="3"
    tools:context="com.example.raul.myapplication.MainActivity">
    <ImageButton android:id="@+id/imageButton"
        android:background="@color/transparent"
        android:layout_rowWeight="1"
        android:layout_height="0px"
        android:layout_column="0"
        android:layout_row="0"
        android:orientation="horizontal"
        android:src="@drawable/boton1"
        android:scaleType="fitCenter"
        />
    <ImageButton android:id="@+id/imageButton2"
        android:background="@color/transparent"
        android:layout_rowWeight="1"
        android:layout_height="0px"
        android:layout_column="0"
        android:layout_row="1"
        android:src="@drawable/boton2"
        android:scaleType="fitCenter"
        />
    <ImageButton android:id="@+id/imageButton3"
        android:background="@color/transparent"
        android:layout_rowWeight="1"
        android:layout_height="0px"
        android:layout_column="0"
        android:layout_row="2"
        android:src="@drawable/boton3"
        android:scaleType="fitCenter"
        />
</GridLayout>
